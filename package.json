{
  "name": "decentralized-ethereum-app",
  "version": "1.0.0",
  "description": "A decentralized application on Ethereum blockchain",
  "main": "server.ts",
  "scripts": {
    "prestart": "node dist/check-env MONGODB_URL ETHEREUM_PROVIDER_WS PRIVATE_KEY",
    "start": "node dist/src/server.js",
    "build": "npm run prepare && npm run rm-dist && npm run build-ts && npm run copy-assets",
    "serve": "node dist/src/server.js",
    "test": "npx jest",
    "prepare": "chmod +x ./scripts/*",
    "watch-node": "nodemon dist/src/server.js",
    "build-ts": "tsc",
    "rm-dist": "./scripts/rm-dist.sh",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "copy-assets": "./scripts/copy-assets.sh",
    "debug": "npm run build && npm run watch:debug",
    "serve:debug": "nodemon --inspect dist/server.js",
    "watch:debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve:debug\"",
    "code:check": "npm run code:lint; npm run code:format --check",
    "code:clean": "npm run code:lint --fix; npm run code:format --write",
    "code:lint": "eslint --ext .js,.jsx,.ts,.tsx \"src/\"",
    "code:format": "prettier './src/**/**.{js,jsx,ts,tsx}'",
    "code:check:rules": "eslint --print-config .eslintrc.js | eslint-config-prettier-check"
  },
  "engines": {
    "node": "v19.2.0"
  },
  "keywords": [
    "API"
  ],
  "author": "Michael Peters",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^14.14.21",
    "base-64": "^1.0.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "cowsay": "^1.5.0",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "joi": "^17.3.0",
    "mongoose": "^5.11.15",
    "mongoose-paginate-v2": "^1.3.14",
    "node-fetch": "^2.6.7",
    "randomatic": "^3.1.1",
    "serverless-http": "^3.2.0",
    "uuid": "^8.3.2",
    "web3": "^1.9.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^29.5.0",
    "@types/mocha": "^10.0.1",
    "@types/node-fetch": "^2.6.1",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^2.0.12",
    "jest": "^26.6.3",
    "mongodb-memory-server": "^8.12.1",
    "sinon": "^15.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^26.5.6",
    "ts-node": "^8.10.2",
    "ts-watch": "^1.0.8",
    "tsc-watch": "^4.2.8",
    "typedoc": "^0.17.7",
    "typescript": "^4.6.4"
  }
}
